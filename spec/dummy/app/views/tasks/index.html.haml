.container
  %h1
    Listing Tasks

  %table.table
    %thead
      %tr
        %th Title
        %th Description
        %th Attachments
    %tbody
      - @tasks.each do |task|
        %tr
          %td= task.title
          %td= task.description
          %td
            - if task.attachments.any?
              - task.attachments.each do |attachment|
                = image_tag(attachment.file.url, size: "100x100")
          %td= link_to "Edit", edit_task_path(task), class: "btn btn-sm btn-info"
          %td= link_to "Destroy", task_path(task), class: "btn btn-sm btn-danger", method: :delete, data: { confirm: "Are you sure?" }
  %br/
  = link_to "New Task", new_task_path, class: "btn btn-primary"
